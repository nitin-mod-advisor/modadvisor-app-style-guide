
{
  "entities": {
    "ColorPalette": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ColorPalette",
      "type": "object",
      "description": "Represents a color palette with a collection of color tokens.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the color palette."
        },
        "tokens": {
          "type": "array",
          "description": "An array of color tokens.",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "role": {
                "type": "string"
              },
              "light": {
                "type": "string"
              },
              "dark": {
                "type": "string"
              }
            },
            "required": ["name", "role", "light", "dark"]
          }
        }
      },
      "required": ["id", "tokens"]
    },
    "TypographySettings": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "TypographySettings",
      "type": "object",
      "description": "Stores the application's typography settings.",
      "properties": {
        "fontFamily": {
          "type": "string",
          "description": "The CSS font-family string for the application body."
        }
      },
      "required": ["fontFamily"]
    },
    "AllowedUser": {
        "title": "AllowedUser",
        "type": "object",
        "description": "Represents a user who is authorized to make edits.",
        "properties": {
            "email": {
                "type": "string",
                "format": "email",
                "description": "The email address of the authorized user."
            }
        },
        "required": ["email"]
    },
    "LoginAttempt": {
        "title": "LoginAttempt",
        "type": "object",
        "description": "Logs an attempt to sign in to the application.",
        "properties": {
            "email": {
                "type": "string",
                "format": "email",
                "description": "The email address used for the login attempt."
            },
            "status": {
                "type": "string",
                "enum": ["success", "failure"],
                "description": "Whether the login and authorization was successful or not."
            },
            "timestamp": {
                "type": "string",
                "format": "date-time",
                "description": "The timestamp of the login attempt."
            },
            "reason": {
                "type": "string",
                "description": "The reason for a failed login attempt (e.g., 'Email not in allowed list')."
            }
        },
        "required": ["email", "status", "timestamp"]
    }
  },
  "auth": {
    "providers": [
      "anonymous",
      "google.com",
      "microsoft.com"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/palettes/{paletteId}",
        "definition": {
          "entityName": "ColorPalette",
          "schema": {
            "$ref": "#/backend/entities/ColorPalette"
          },
          "description": "Stores individual color palettes."
        }
      },
      {
        "path": "/settings/typography",
        "definition": {
          "entityName": "TypographySettings",
          "schema": {
            "$ref": "#/backend/entities/TypographySettings"
          },
          "description": "Stores global typography settings. This is a single-document path."
        }
      },
      {
          "path": "/allowed_users/{email}",
          "definition": {
              "entityName": "AllowedUser",
              "schema": {
                  "$ref": "#/backend/entities/AllowedUser"
              },
              "description": "A collection where each document ID is the email of an authorized user."
          }
      },
      {
          "path": "/login_attempts/{attemptId}",
          "definition": {
              "entityName": "LoginAttempt",
              "schema": {
                  "$ref": "#/backend/entities/LoginAttempt"
              },
              "description": "A collection to log all user login attempts for auditing."
          }
      }
    ]
  }
}
